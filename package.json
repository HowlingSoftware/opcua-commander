{
  "name": "opcua-commander",
  "version": "0.13.0",
  "description": "OPCUA CLI client",
  "main": "index.js",
  "keywords": [
    "opcua",
    "iot",
    "iiot",
    "cli",
    "curses",
    "blessed"
  ],
  "scripts": {
    "build": "tsc -b",
    "release": "npm run build && npx release-it",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ncu": "npx npm-check-updates -u --semverLevel minor -x chalk,yargs,env-paths",
    "start": "tsc -b && node dist/index.js",
    "demo:secure": "tsc -b && node dist/index.js -e opc.tcp://opcuademo.sterfive.com:26543 -s=SignAndEncrypt -P=Aes128_Sha256_RsaOaep -u=user1 -p=password1",
    "demo:secure2": "tsc -b && node dist/index.js -e opc.tcp://opcuademo.sterfive.com:26543 -s=SignAndEncrypt -P=Basic256Sha256 -u=user1 -p=password1",
    "demo": "tsc -b && node dist/index.js -e opc.tcp://opcuademo.sterfive.com:26543 -s=None -u=user1 -p=password1"
  },
  "author": "Etienne Rossignon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/node-opcua/opcua-commander.git"
  },
  "bin": {
    "opcua-commander": "bin/opcua-commander",
    "oc": "bin/opcua-commander"
  },
  "engines": {
    "node": ">= 8.0"
  },
  "bugs": {
    "url": "https://github.com/node-opcua/opcua-commander/issues"
  },
  "dependencies": {
    "@types/blessed": "^0.1.19",
    "async": "^3.2.2",
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.10.1",
    "camelcase": "^6.2.1",
    "chalk": "4.0.0",
    "cli-truncate": "^3.1.0",
    "decamelize": "^6.0.0",
    "es-abstract": "^1.19.1",
    "node-opcua-client": "^2.62.5",
    "node-opcua-pki": "^2.13.0",
    "source-map-support": "^0.5.21",
    "underscore": "^1.13.1",
    "update-notifier": "5.1.0",
    "yargs": "17.2.1"
  },
  "devDependencies": {
    "typescript": "^4.5.3"
  }
}
